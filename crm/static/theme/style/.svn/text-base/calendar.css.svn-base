/* Dimensioni calendario e celle:
 per modificare la visualizzazione agire su questi elementi
 */

.table_cell {
   width : 70px;
   height : 50px;
}

.table_row {
   display : table-row;
}

#calendar {
   width : 550px;  
}

#calendar_head {
   margin-left : 150px;
   width : 100%;
}

#calendar_body > .header {
   float : left;
   width : 150px;
   //position : fixed;
   background-color : white;
   z-index : 100;
}

#calendar_body > .header > .firstrow {
   width : 150px;
   background-color : white;
   border : 0px solid grey;
   font-size:10px; 
}

.weekday {
   text-align : center;
   font-size : 10px;
   border : 1px solid lightgrey;
   margin : 5px 0 10px 0;
}

.week {
   margin: 0 15px;
}

.day_holder, .weekday {
   display : table-cell;
}

.other_month {
   opacity : 50%;
}

