.skin0 {
	position:absolute;
	width:160px;
	border:1px solid black;
	background-color: #f5f5f5;
	line-height:20px;
	cursor:default;
	font: 11px verdana, arial, helvetica;
	visibility:hidden;
	z-index:90;
}

.skin0 > .menu_header {
   width : 100%;
   font-weight: bold;
   background-color : #0A0A84;
   color : white;
   text-align : center;
   border-collapse : collapse;
   border-bottom : 1px solid black;
   margin-bottom: 2px;
}


.skin0 > .menuitems {
    padding-right:10px;
    padding-bottom:2px;
    padding-top:2px;
}

.skin0 > .menuitems.disabled {
    background-color:lightgrey; 
    color:grey;
}

.skin0 > .menuitems > .help{
    background-color:lightyellow; 
    position : relative;
    padding : 2px;
    border : 1px solid grey;
    margin : 5px 0px 5px 10px;
}

